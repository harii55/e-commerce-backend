{
  "info": {
    "name": "E-Commerce Backend API",
    "description": "API collection for E-Commerce Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "userId",
      "value": "user123"
    },
    {
      "key": "productId",
      "value": ""
    },
    {
      "key": "orderId",
      "value": ""
    },
    {
      "key": "paymentId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Laptop\",\n  \"description\": \"High-performance laptop with 16GB RAM\",\n  \"price\": 999.99,\n  \"stock\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          }
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            }
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products/search?q=laptop",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "laptop"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Add to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/cart/add",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "add"]
            }
          }
        },
        {
          "name": "Get User Cart",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{userId}}"]
            }
          }
        },
        {
          "name": "Remove Item from Cart",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{userId}}/item/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{userId}}", "item", "{{productId}}"]
            }
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{userId}}/clear",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{userId}}", "clear"]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}"]
            }
          }
        },
        {
          "name": "Get User Order History",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders/user/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "user", "{{userId}}"]
            }
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}/cancel",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}", "cancel"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Initiate Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"{{orderId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/payments/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", "create"]
            }
          }
        },
        {
          "name": "Get Payment by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/payments/{{paymentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", "{{paymentId}}"]
            }
          }
        },
        {
          "name": "Get Payment by Order ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/payments/order/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", "order", "{{orderId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Payment Webhook (Success)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"razorpayOrderId\": \"order_abc123\",\n  \"razorpayPaymentId\": \"pay_xyz789\",\n  \"status\": \"SUCCESS\",\n  \"message\": \"Payment successful\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/payment",
              "host": ["{{baseUrl}}"],
              "path": ["api", "webhooks", "payment"]
            }
          }
        },
        {
          "name": "Payment Webhook (Failed)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"razorpayOrderId\": \"order_abc123\",\n  \"status\": \"FAILED\",\n  \"message\": \"Insufficient funds\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/payment",
              "host": ["{{baseUrl}}"],
              "path": ["api", "webhooks", "payment"]
            }
          }
        }
      ]
    }
  ]
}

